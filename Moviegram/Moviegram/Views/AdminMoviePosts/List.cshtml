@model List<Moviegram.Models.Domain.MoviePost>

@{
}


<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>All MoviePosts - Admin Functionality</h1>
    </div>
</div>

<div class="container py-5">
    @if (Model != null && Model.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <td>Id</td>
                    <td>Heading</td>
                    <td>Tags</td>
                    <td> </td>
                </tr>
            </thead>
            <tbody>
                @foreach (var moviePost in Model)
                {
                    <tr>
                        <td>@moviePost.Id</td>
                        <td>@moviePost.Heading</td>
                        <td>
                            <div class="d-flex">
                                @foreach (var tag in moviePost.Tags)
                                {
                                    <span class="badge bg-secondary me-1">@tag.Name</span>
                                }
                            </div>
                        </td>
                        <td>
                            <a asp-area=""
                               asp-controller="AdminMoviePosts"
                               asp-action="Edit"
                               asp-route-id="@moviePost.Id">
                                Edit
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p> No Movie Posts Found </p>
    }


    
</div>